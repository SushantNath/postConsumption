<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog id="operationDialog" contentWidth ="85%"
	multiSelect="false"
		noDataText="{i18n>noDataText}"
		search= "handleSearchOperation"
		confirm="handleCloseOperation"
		cancel="_handleValueHelpCloseOperation"
		
		items="{
			path : '/Invoices'}">             
		<ColumnListItem>
			<cells>
				<ObjectIdentifier 
				title="{ProductId}" 
				 />
					<Text text="{ProductName}" />	
					<Text text="{ProductName}" />	
					
			</cells>
		</ColumnListItem>
		<columns>
			<Column width="12em">
				<header>
					<Text text="{i18n>shipToCode}" />
				</header>
			</Column>
				<Column width="12em">
				<header>
					<Text text="{i18n>text}" />
				</header>
			</Column>
				<Column width="12em">
				<header>
					<Text text="{i18n>shipToCountry}" />
				</header>
			</Column>
			
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>